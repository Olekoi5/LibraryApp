@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<LibraryApp.Models.Reservesion>

<div class="container">
    <div class="text-center text-info">
        <h3>Podsumowanie wszystkich rezerwacji książki</h3>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <tr>
                <th>ID</th>
                <th>Data rezerwacji</th>
                <th>ID rezerwującego</th>
            </tr>
            <tbody>
                @foreach (var reservesion in Model)
                {
                    <tr>
                        <td>@reservesion.id</td>
                        <td>@reservesion.DateReservesion</td>
                        <td>@reservesion.userLogin</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Książka nie była wcześniej rezerwowana.</p>
    }
    <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Powrót</a>
</div>


